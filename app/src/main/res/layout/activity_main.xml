<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="a.mortcalc.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Purchase Price:"
            android:id="@+id/purchasePriceVw"
            android:layout_row="0"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/purchasePrice"
            android:layout_row="0"
            android:layout_column="1"
            android:linksClickable="false"
            android:singleLine="true"
            android:autoText="false"
            android:background="#dde5ec"
            android:layout_margin="10dp"
            android:textSize="20dp"
            android:text="0.00"
            android:editable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Down Payment: "
            android:id="@+id/downPaymentVw"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/downPaymenTx"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#dde8da"
            android:layout_margin="10dp"
            android:editable="true"
            android:text="0.00"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest Rate:"
            android:id="@+id/intRateVw"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_gravity="center_vertical" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/intRateTx"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:background="#dde5ec"
            android:autoText="false"
            android:text="0.00"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:editable="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="206dp"
            android:layout_height="30dp"
            android:layout_row="3"
            android:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Years(Custom):"
                android:id="@+id/seekBarVw"
                android:layout_row="11"
                android:layout_column="0"
                android:textSize="20dp" />

            <TextView
                android:layout_width="42dp"
                android:layout_height="30dp"
                android:text="0"
                android:id="@+id/customYrsVw"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:numeric="integer|decimal" />

        </LinearLayout>

        <SeekBar
            android:layout_width="111dp"
            android:layout_height="30dp"
            android:id="@+id/seekBar"
            android:layout_row="3"
            android:layout_column="1"
            android:clickable="true"
            android:visibility="visible"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loan Amount: "
            android:id="@+id/loanAmtVw"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="0.00"
            android:id="@+id/loanAmtCalc"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:editable="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10YR Monthly Payment: "
            android:id="@+id/tenYrLoanVw"
            android:layout_row="5"
            android:layout_column="0"
            android:textIsSelectable="false"
            android:textSize="20dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="0.00"
            android:id="@+id/tenYrLoanCalc"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:editable="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20YR Monthly Payment:"
            android:id="@+id/twentyYrLoanVw"
            android:layout_row="6"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="0.00"
            android:id="@+id/twentyYrLoanCalc"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:editable="true"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30YR Monthly Payment:"
            android:id="@+id/thirtyYrLoanVw"
            android:layout_row="7"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_gravity="center" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="0.00"
            android:id="@+id/thirtyYrLoanCalc"
            android:layout_row="7"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:editable="false"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom Monthly Payment:"
            android:id="@+id/customLoanVw"
            android:layout_row="8"
            android:layout_column="0"
            android:textSize="20dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="0.00"
            android:id="@+id/customLoanCalc"
            android:layout_row="8"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/spaceVw"
            android:layout_row="9"
            android:layout_column="0" />

    </GridLayout>
</RelativeLayout>
